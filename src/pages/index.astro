---
import "../layouts/BaseLayout.astro";
---

<BaseLayout title="Vicu Villanueva - Artista & Comunicadora">

  <!-- HERO -->
  <section class="hero">
    <img src="/vicu.jpg" alt="Foto de Vicu Villanueva" class="banner" />

    <div class="hero-text">
      <h1>Vicu Villanueva</h1>
      <h2>Artista & Comunicadora</h2>
    </div>
  </section>


  <!-- SECCIONES DE ACCESO: MÚSICA / VIDEOS / SOBRE MÍ -->
  <section class="sections">
    
    <!-- MÚSICA -->
    <a href="/musica" class="section-card">
      <img src="/disco.jpg" alt="Mi Música">
      <div class="section-info">
        <h3>Mi Música</h3>
        <p>Discos, ambient, sintetizadores y exploraciones sonoras.</p>
      </div>
    </a>

    <!-- VIDEOS -->
    <a href="/videos" class="section-card">
      <img src="/video.jpg" alt="Mis Videos">
      <div class="section-info">
        <h3>Mis Videos</h3>
        <p>Videoensayos, ficciones y experimentos visuales.</p>
      </div>
    </a>

    <!-- SOBRE MÍ -->
    <a href="/sobre-mi" class="section-card">
      <img src="/ilustracion.png" alt="Sobre mí">
      <div class="section-info">
        <h3>Sobre Mí</h3>
        <p>Mi recorrido, mi práctica artística y mi universo creativo.</p>
      </div>
    </a>

  </section>

</BaseLayout>
